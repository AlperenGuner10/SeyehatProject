@model EntityLayer.Concrete.Guide
@{
	ViewData["Title"] = "AddGuide";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rota Oluşturma Sayfası</h1>
<form method="post">
	<div class="form-control">
		@Html.Label("Ad Soyad")
		<input type="text" asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<br />
	<div class="form-control">
		@Html.Label("Rehber Fotoğraf")
		<input type="text" asp-for="Image" class="form-control" />
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>
	<br />
	<div class="form-control">
		@Html.Label("Instagram URL")
		<input type="text" asp-for="InstagramUrl" class="form-control" />
	</div>
	<br />
	<div class="form-control">
		@Html.Label("Twitter URL")
		<input type="text" asp-for="TwitterUrl" class="form-control" />
	</div>
	<br />
	<div class="form-control">
		@Html.Label("Açıklama")
		<input asp-for="Description" class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<br />
	<button class="btn btn-outline-dark">Yeni Rehber Oluştur</button>
</form>





