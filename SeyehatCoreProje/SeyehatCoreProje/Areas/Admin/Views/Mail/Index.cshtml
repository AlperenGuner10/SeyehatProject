@model SeyehatCoreProje.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Mail Oluşturma Sayfası</h1>
<form method="post">
	<div class="form-control">
		@Html.Label("Alıcı Mail Adresi")
		<input type="text" asp-for="RecieverMail" class="form-control" />
	</div>
	<br />
	<div class="form-control">
		@Html.Label("Konu")
		<input type="text" asp-for="Subject" class="form-control" />
	</div>
	<br />
	<div class="form-control">
		@Html.Label("Mesaj İçeriği")
		<input type="text" asp-for="Body" class="form-control" />
	</div>
	<br />
	<button class="btn btn-outline-dark">Mail Gönder</button>
</form>