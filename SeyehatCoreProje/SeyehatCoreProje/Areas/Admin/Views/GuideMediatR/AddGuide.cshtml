@model CreateGuideComment
@{
	ViewData["Title"] = "AddGuide";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Ekleme Sayfası</h1>

<form method="post">
	<label for="">Rehber Adı</label>
	<input type="text" asp-for="Name" class="form-control">
	<br>
	<label for="">Rehber Açıklaması</label>
	<input type="text" asp-for="Description" class="form-control">
	<br>
	<button class="btn btn-outline-primary">Rehberİ Kaydet</button>
</form>

